{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "webworker"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6",
    "strict": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": false,
    "experimentalDecorators": true,
    "stripInternal": true
  },
  "exclude": [
    "node_modules",
    ".cache",
    "public",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.svg"
  ]
}
